---
import BriefcaseIcon from '../../icons/BriefcaseIcon.astro';
import ExperienceListItem from './ExperienceListItem.astro';

const EXPERIENCE = [
  {
    date: 'Actualmente...',
    title: 'Mobile and Backend Developer - Comercializadora la Occidental',
    description:
      'Responsable del desarrollo y mantenimiento de las aplicaciones web y backend. Mejoras en los servicios de comunicación de datos entre las aplicaciones desarrolladas en la empresa.',
    link: 'https://cloccidental.com',
  },
  {
    date: 'Marzo 2023',
    title: 'Mobile Developer - Comercializadora la Occidental',
    description:
      'Encargado de desarrollar aplicaciones móviles informativas para mantener al día los usuarios asignados por la empresa.',
    link: 'https://cloccidental.com',
  },
];
---

<div class="flex flex-col gap-2">
  <h2 class="flex items-center gap-x-3 text-2xl font-semibold">
    <BriefcaseIcon class="size-7" />
    Experiencia laboral
  </h2>
  <ol class="relative ml-3 border-s border-gray-200">
    {
      EXPERIENCE.map((item) => (
        <li class="my-5 ms-4">
          <ExperienceListItem {...item} />
        </li>
      ))
    }
  </ol>
</div>
