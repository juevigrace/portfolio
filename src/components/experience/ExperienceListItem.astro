---
interface Props {
  title: string;
  description: string;
  link: string | null;
  date: string;
}

const { title, description, link, date } = Astro.props;
---

<div
  class="absolute -start-1.5 mt-1.5 h-3 w-3 rounded-full border border-white bg-gray-200 dark:border-gray-900 dark:bg-gray-500"
>
</div>
<time class="mb-1 text-sm leading-none font-normal text-sky-200/80">{date}</time
>
<h3 class="mt-2 text-lg font-semibold text-yellow-200">
  {title}
</h3>
<p class="mb-4 text-base font-normal text-pretty text-gray-100">
  {description}
</p>
{
  link && (
    <a
      href={link}
      class="inline-flex items-center rounded-lg border border-gray-200 bg-white px-4 py-2 text-sm font-medium text-gray-900 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:text-blue-700 focus:ring-4 focus:ring-gray-100 focus:outline-none dark:border-gray-600 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white dark:focus:ring-gray-700"
      target="_blank"
      rel="noopener noreferrer"
    >
      Saber m√°s{' '}
      <svg
        class="ms-2 h-3 w-3 rtl:rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    </a>
  )
}
